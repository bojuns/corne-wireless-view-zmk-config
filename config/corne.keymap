#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/ext_power.h>

#define COMBO_TIMEOUT 60
#define FAST_COMBO_TIMEOUT 35

&mt {
  compatible = "zmk,behavior-hold-tap";
  tapping-term-ms = <100>;
  quick_tap_ms = <200>;
  flavor = "balanced";
};

&lt {
  compatible = "zmk,behavior-hold-tap";
  tapping-term-ms = <110>;
  quick_tap_ms = <200>;
  flavor = "balanced";
};
/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};
/ {
    macros {
        line_left: line_left {
            label = "go_line_left";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp LEFT>
                , <&macro_release &kp LCTRL>
                ;
        };
        line_right: line_right {
            label = "go_line_right";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp RIGHT>
                , <&macro_release &kp LCTRL>
                ;
        };
        lte: lte {
            label = "less_than_equal";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp LT>
                , <&macro_tap &kp EQUAL>
                ;
        };
        rptr: rptr {
          label = "right_pointer";
          compatible = "zmk,behavior-macro";
          #binding-cells = <0>;
          bindings 
              = <&macro_release &kp LSFT>
              , <&macro_tap &kp MINUS>
              , <&macro_tap &kp GT>
              ;
        };
        gte: gte {
            label = "greater_than_equal";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &kp GT>
                , <&macro_tap &kp EQUAL>
                ;
        };
    };
};
/ {
    combos {
        compatible = "zmk,combos";
        combo_equal {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <0 1>;
            bindings = <&kp EQUAL>;
            layers = <0>;
        };
        combo_minus {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <8 9>;
            bindings = <&kp MINUS>;
            layers = <0>;
        };
        combo_plus {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <1 2>;
            bindings = <&kp PLUS>;
            layers = <0>;
        };
        combo_under {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <7 8>;
            bindings = <&kp UNDER>;
            layers = <0>;
        };
        combo_tab {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <10 20>;
            bindings = <&kp TAB>;
            layers = <0>;
        };
        combo_semi {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <19 29>;
            bindings = <&kp SEMI>;
            layers = <0 1>;
        };
        combo_line_left {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <0 10>;
            bindings = <&line_left>;
            layers = <0>;
        };
        combo_line_right {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <9 19>;
            bindings = <&line_right>;
            layers = <0>;
        };
        combo_lbrc {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <20 21>;
            bindings = <&kp LBRC>;
            layers = <0>;
        };
        combo_rbrc {
            timeout-ms = <FAST_COMBO_TIMEOUT>;
            key-positions = <28 29>;
            bindings = <&kp RBRC>;
            layers = <0>;
        };
        combo_lbkt {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <22 23>;
            bindings = <&kp LBKT>;
            layers = <0>;
        };
        combo_rbkt {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <26 27>;
            bindings = <&kp RBKT>;
            layers = <0>;
        };
        combo_lpar {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <21 22>;
            bindings = <&kp LPAR>;
            layers = <0>;
        };
        combo_rpar {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <27 28>;
            bindings = <&kp RPAR>;
            layers = <0>;
        };
        combo_lte {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <23 24>;
            bindings = <&lte>;
            layers = <0>;
        };
        combo_gte {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <25 26>;
            bindings = <&gte_ptr>;
            layers = <0>;
        };
        combo_left {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <15 25>;
            bindings = <&kp LEFT>;
            layers = <0>;
        };
        combo_up {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <16 26>;
            bindings = <&kp UP>;
            layers = <0>;
        };
        combo_down {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <17 27>;
            bindings = <&kp DOWN>;
            layers = <0>;
        };
        combo_right {
            timeout-ms = <COMBO_TIMEOUT>;
            key-positions = <18 28>;
            bindings = <&kp RIGHT>;
            layers = <0>;
        };
    };
};
/ {
  behaviors {
    hm: homerow_mods {
      compatible = "zmk,behavior-hold-tap";
      label = "HOMEROW_MODS";
      #binding-cells = <2>;
      flavor = "balanced";
      tapping-term-ms = <200>;
      quick-tap-ms = <150>;
      global-quick-tap;
      bindings = <&kp>, <&kp>;
    };
  };
  keymap {
   compatible = "zmk,keymap";

   default_layer {
    // -------------------------------------------------------------------------------------
    // |  Q  =  W  |  F  |  P  |  G  |   |  J  |  L  |  U  |  Y  -  '  |
    // |  A  |  R  |  S  |  T  |  D  |   |  H  |  N  |  E  |  I  |  O  |
    // |  Z  [  X  |  C  |  V  |  B  |   |  K  |  M  |  ,  |  .  ]  /  |
    //  | ESC/+ | LWR(BSPC/DEL) | LSFT |  ;  |  RSE(SPC/TAB)  | RET/_ |
    bindings = <
      &kp Q       &kp W      &kp F       &kp P      &kp G  &kp J &kp L       &kp U       &kp Y      &kp SQT     
      &hm LSHFT A &hm LALT R &hm LCTRL S &hm LGUI T &kp D  &kp H &hm RGUI N  &hm RCTRL E &hm RALT I &hm RSHFT O 
      &kp Z       &kp X      &kp C       &kp V      &kp B  &kp K &kp M       &kp COMMA   &kp DOT    &kp FSLH    
      &kp ESC &lt 1 BKSP &mt LSHFT TAB &kp SEMI &lt 2 SPACE &kp RET
      >;
    };

   lower_layer {
    // -----------------------------------------------------------------------------
    // |  !  |  @  |  #  |  $  |  %  |   |  %  |  &  |  *  |  (  |  )  |
    // |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |
    // |  =  |  ~  |  :  |  `  |  |  |   |  \  |  -  |  ,  |  .  |  /  |
    //      |  DEL  |  TRANS  |  LGUI  |  BKSP  | MOSPACE |  RET  |
    bindings = <
      &kp EXCL  &kp AT    &kp HASH  &kp DLLR  &kp PRCNT  &kp CARET &kp AMPS  &kp STAR  &kp LPAR &kp RPAR 
      &kp N1    &kp N2    &kp N3    &kp N4    &kp N5     &kp N6    &kp N7    &kp N8    &kp N9   &kp N0   
      &kp EQUAL &kp TILDE &kp COLON &kp GRAVE &kp PIPE  &kp BSLH   &kp MINUS &kp COMMA &kp DOT  &kp FSLH 
      &kp DEL    &trans  &kp LGUI &kp BKSP  &lt 2 SPACE &kp RET
      >;
   };

   raise_layer {
    // -----------------------------------------------------------------------------------------
    // | INS  | BACK |  UP  |  FWD | PGUP |   | BRI+ |  VOL+ | (  |  )  | DEL |
    // | CAPS | LEFT | DOWN | RGHT | PRSC |   | AUTO |  MUTE | [  |  ]  |  ;  |
    // | HOME | Z IN | LGUI | ZOUT | PGDN |   | BRI- |  VOL- | {  |  }  | END |
    //                              |   |   | SHIFT |  |   |
    bindings = <
      &kp INS  &kp C_AC_BACK  &kp UP     &kp C_AC_FORWARD  &kp PG_UP &kp C_BRI_UP   &kp C_VOL_UP &kp LPAR &kp RPAR  &kp DEL  
      &kp CAPS &kp LEFT       &kp DOWN   &kp RIGHT         &kp PSCRN &kp C_BRI_AUTO &kp C_MUTE   &kp LBKT &kp RBKT  &kp SEMI 
      &kp HOME &kp C_AC_ZOOM_IN &kp LGUI &kp C_AC_ZOOM_OUT &kp PG_DN &kp C_BRI_DN   &kp C_VOL_DN &kp LBRC &kp RBRC  &kp END  
      &trans    &trans  &kp LSHFT &trans &trans      &trans
      >;
   };

   funct_layer {
    // -----------------------------------------------------------------------------------------
    // | F1 | F2  | F3  | F4  | G |   | BT1 | BLE     | XXX | EP ON |  LGAME  |
    // | F5 | F6  | F7  | F8  | D |   | BT2 | OUT TOG | XXX |  XXX  |   XXX   |
    // | F9 | F10 | F11 | F12 | B |   | BT3 | USB     | XXX | EPOFF | BLE_RST |
    //            | XXX | XXX | XXX | XXX | XXX | XXX |
    bindings = <
      &kp F1 &kp F2  &kp F3  &kp F4  &kp G &bt BT_SEL 0 &out OUT_BLE &none &ext_power EP_ON  &bt BT_CLR 
      &kp F5 &kp F6  &kp F7  &kp F8  &kp D &bt BT_SEL 1 &out OUT_TOG &none &none             &none      
      &kp F9 &kp F10 &kp F11 &kp F12 &kp B &bt BT_SEL 2 &out OUT_USB &none &ext_power EP_OFF &tog 4     
      &trans   &trans    &trans  &trans  &trans   &trans
      >;
   };  

   game_layer {
    // -----------------------------------------------------------------------------------------
    // | ESC   | Q | W | E | R |   | T | 1 | 2 | 3 | GAME |
    // | LSHFT | A | S | D | G |   | H | 4 | 5 | 6 |  F3  |
    // | M     | Z | X | C | V |   | B | 7 | 8 | 9 |  F5  |
    //             | 4 | 3 | SPC | SPC | 0 | ENT |
    bindings = <
      &kp ESC   &kp Q &kp W &kp E &kp R &kp T &kp N1 &kp N2 &kp N3 &tog 4 
      &kp LSHFT &kp A &kp S &kp D &kp G &kp H &kp N4 &kp N5 &kp N6 &kp F3 
      &kp M     &kp Z &kp X &kp C &kp V &kp B &kp N7 &kp N8 &kp N9 &kp F5 
      &kp N4          &kp N3      &kp SPACE &kp SPACE  &kp N0       &kp RET
      >;
    };
  };
};
